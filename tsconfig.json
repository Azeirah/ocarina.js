{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2015",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "outDir": "./build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./types"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}